<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <% if teaching_user? || system_user? %>
        <th colspan="4"></th>
        <% else %>
        <th colspan="1"></th>
        <% end %>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= link_to 'Show', project, :class => 'btn btn-secondary' %></td>
        <% if teaching_user? || system_user? %>
        <td><%= link_to 'Create Team', new_team_path(:project_id => project.id), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_project_path(Project.find(project.id)), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path, :class => 'btn btn-primary' %>
