<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @project.name %>
</p>
<p>
  <strong>Teams:</strong>
  <br>
  <ul>
    <% @project.team_ids.each do |i| %>
      <% t = Team.find(i) %>
      <li><%= link_to t.name, teams_path + "/" + t.id.to_s %></li>
    <% end %>
  </ul>
</p>

<% if teaching_user? || system_user? %>
<%= link_to 'Create Team', new_team_path(:project_id => @project.id), :class => 'btn btn-primary' %>
<%= link_to 'Edit', edit_project_path(@project), :class => 'btn btn-warning' %>
<% end %>
<%= link_to 'Back', projects_path, :class => 'btn btn-danger' %>

