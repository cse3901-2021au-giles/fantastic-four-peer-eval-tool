<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <select class="form-select" aria-label="Default select example">
    <%= form.collection_select :user_id, User.order(:id), :id, :name %>
  </select>
  <select class="form-select" aria-label="Default select example">
      <%= form.collection_select :project_id, Project.order(:id), :id, :name %>
  </select>
  <div>Note: Edit the team multiple times to add/remove members</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
