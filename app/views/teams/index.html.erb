<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>Member Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= Project.find(team.project_id).name %></td>
        <td><%= team.users.count %></td>
        <td><%= link_to 'Show', team, :class => 'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_team_path(team), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
