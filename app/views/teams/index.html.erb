<p id="notice"><%= notice %></p>

<h1>Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th>Member Count</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= Project.find(team.project_id).name %></td>
        <td><%= team.users.count %></td>
        <td><%= link_to 'Show', team, :class => 'btn btn-secondary' %></td>
        <% if PeerEvaluation.where(team_id: team.id).count > 0 %>
          <% if evals_done? team %>
            <td><%= link_to 'View Scores', reviews_path(:team_id => team.id), :class => 'btn btn-primary' %></td>
          <% end %>
        <% elsif team.users.count > 1 %> <!-- This prevents the case where a peer eval can never be completed. (No reviews in a peer eval) -->
          <td><%= link_to 'Start Evaluations', new_peer_evaluation_path(:team_id => team.id), data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary' %></td>
        <% end %>
        <td><%= link_to 'Edit', edit_team_path(team), :class => 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
